{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Moon",
  "patterns": [
    { "include": "#comments" },
    { "include": "#multiline-strings" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#operators" },
    { "include": "#punctuation" },
    { "include": "#urls" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.hash.moon",
          "match": "#.*$"
        },
        {
          "name": "comment.line.arrow.moon",
          "match": "<-.*$"
        },
        {
          "name": "comment.line.section.moon",
          "match": "__[A-Z_]+__.*$"
        },
        {
          "name": "comment.block.moon",
          "begin": ":::",
          "end": ":::"
        }
      ]
    },
    "multiline-strings": {
      "patterns": [
        {
          "name": "string.quoted.multiline.moon",
          "begin": "___",
          "end": "___",
          "patterns": [
            { "include": "#urls" }
          ]
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.moon",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            { "include": "#urls" }
          ]
        }
      ]
    },
    "urls": {
      "patterns": [
        {
          "name": "markup.underline.link.moon",
          "match": "https?://[^\\s\"'`\\]\\)]+\\b"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.moon",
          "match": "\\b[0-9]+\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.moon",
          "match": "\\b(m|p|get|put|read|in|if|then|else|end_|start|goto|stop|try|catch|return)\\b"
        },
        {
          "name": "keyword.other.moon",
          "match": "\\b(hint|import|export|fish|all|http)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.moon",
          "match": "(==|!=|>=|<=|>|<)"
        },
        {
          "name": "keyword.operator.assignment.moon",
          "match": "="
        },
        {
          "name": "keyword.operator.arithmetic.moon",
          "match": "(\\+|-|\\*|/|%)"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.definition.parameters.begin.moon",
          "match": "\\("
        },
        {
          "name": "punctuation.definition.parameters.end.moon",
          "match": "\\)"
        },
        {
          "name": "punctuation.definition.array.begin.moon",
          "match": "\\["
        },
        {
          "name": "punctuation.definition.array.end.moon",
          "match": "\\]"
        },
        {
          "name": "punctuation.definition.dictionary.begin.moon",
          "match": "\\{"
        },
        {
          "name": "punctuation.definition.dictionary.end.moon",
          "match": "\\}"
        },
        {
          "name": "punctuation.separator.moon",
          "match": "[,:;\\.]"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.moon",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  },
  "scopeName": "source.moon"
}
